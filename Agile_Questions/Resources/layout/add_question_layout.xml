<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:background="@color/splash_background">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:text="Add New Question"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="monospace"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerSubject" android:minHeight="10dp" />
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="monospace"
        android:id="@+id/etQuestionText"
        android:hint="Enter Question Text"/>
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="monospace"
        android:id="@+id/etOptionA"
        android:hint="Enter Option A Text"/>
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="monospace"
        android:id="@+id/etOptionB"
        android:hint="Enter Option B Text"/>
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="monospace"
        android:id="@+id/etOptionC"
        android:hint="Enter Option C Text"/>
    <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="monospace"
        android:id="@+id/etOptionD"
        android:hint="Enter Option D Text"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerOption" android:minHeight="10dp" /> 
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSave"
        android:text="Save Question Details"        
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:background="@drawable/btn_bg"
    />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="10sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:text="Back to All Operations"        
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:background="@drawable/btn_bg"
    />    
</LinearLayout>
</ScrollView>