<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="@color/splash_background">
<LinearLayout 
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:text="Edit Subject Details"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:fontFamily="monospace"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/textView1" />
    <EditText
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etSubjectID"
            android:fontFamily="monospace"
        android:hint="Enter Subject ID"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnFetch"
        android:text="Fetch Subject Details"        
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:background="@drawable/btn_bg"
    />
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="10sp"/>
     <EditText
        android:inputType="text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etSubjectName"
            android:fontFamily="monospace"
        android:hint="Enter Subject Name"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnUpdate"
        android:text="Update Subject Details"        
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:background="@drawable/btn_bg"
    />
    
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" 
            android:textSize="10sp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnBack"
        android:text="Back to All Operations"        
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:fontFamily="cursive"
        android:background="@drawable/btn_bg"
        
    />

</LinearLayout>
</ScrollView>